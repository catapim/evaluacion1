<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ServicioActivity" android:orientation="vertical" android:id="@+id/layServicio">

    <TextView
            android:text="Asocia un servicio a un cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtServicio" android:textSize="18sp"
            android:textAlignment="center" android:textStyle="bold" android:textAllCaps="false"/>
    <TextView
            android:text="Elige el tipo de aparato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAparatos" android:layout_weight="0"
            android:textAlignment="center" android:layout_marginTop="15dp" android:textSize="18sp"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/spAparatos" android:layout_margin="5dp"/>
    <TextView
            android:text="Seleccione fecha compra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleCompra2"
            android:textAlignment="center"
            android:textSize="18sp" android:layout_margin="6dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/selectFechaCompra2"/>
    <TextView
            android:text="Seleccione fecha ST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleFechaServicio2"
            android:textAlignment="center"
            android:textSize="18sp" android:layout_margin="6dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/selectST2"/>
    <TextView
            android:text="Descripción falla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleDescripcion2" android:textAlignment="center"
            android:textSize="18sp" android:layout_margin="6dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDescripcion2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Solucionado el problema? Seleccione según corresponda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/titleSolucion" android:layout_weight="0"
                android:textAlignment="center" android:textSize="18sp" android:layout_margin="1dp"
                android:layout_marginTop="6dp"/>
        <RadioGroup
                android:layout_width="324dp"
                android:layout_height="wrap_content">
            <RadioButton
                    android:text="SI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"/>
            <RadioButton
                    android:text="NO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <Button
            android:text="Finalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnFinalizar2"/>
</LinearLayout>