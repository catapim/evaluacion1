<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registro" android:id="@+id/layRegistro" android:orientation="vertical">

    <TextView
            android:text="Registro cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleRegistro" android:textAlignment="center"
            android:textSize="24sp" android:layout_margin="6dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/inRut" android:inputType="number" android:layout_margin="4dp" android:hint="RUT"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inNombre" android:layout_margin="4dp" android:hint="Nombre"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inApellido" android:layout_margin="4dp" android:hint="Apellido"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inComuna" android:layout_margin="4dp" android:hint="Comuna"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inDireccion" android:layout_margin="4dp" android:hint="Direccion"/>
        <Button
                android:text="Registrar cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnGuardar"/>
    </LinearLayout>
</LinearLayout>