<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".MainActivity"
              tools:showIn="@layout/app_bar_main" android:orientation="vertical" android:layout_margin="10dp"
              android:id="@+id/layMain">

    <TextView
            android:text="Bienvenido a la app de servicio al cliente.  Usa el menú para seleccionar una opción."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtMain"
            android:textSize="30sp" android:textAlignment="center" android:layout_margin="100dp"/>
</LinearLayout>