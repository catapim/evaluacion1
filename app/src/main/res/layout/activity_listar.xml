<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Listar" android:orientation="vertical">

    <TextView
            android:text="Este es tu listado de clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtListar" android:textAlignment="center"
            android:textSize="24sp"/>
    <TextView
            android:text="Elige a cada uno si necesitas realizar alguna acción en él"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/pListar" android:textAlignment="center"
            android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginTop="15dp"
            android:textSize="18sp" android:textStyle="italic" android:layout_marginBottom="15dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/rvEj"
    />
</LinearLayout>